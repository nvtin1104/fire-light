datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  posts         Post[]
  projects      Project[]
}

model Post {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  coverImage  String?
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  tags        Tag[]
}

model Project {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique  
  description String
  content     String
  coverImage  String?
  demoUrl     String?
  githubUrl   String?
  featured    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  tags        Tag[]
}

model Tag {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  posts       Post[]
  projects    Project[]
}

enum Role {
  USER
  ADMIN
}